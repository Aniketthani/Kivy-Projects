<Label>
    font_name:'Roboto'
    font_size: 60
    markup:True
<MyButton@Button>
    
    font_name:"Roboto"
    font_size:35
    bold:True
    border:(2,2,2,2)
    
<MyClock>
    
    orientation: 'vertical'
    
    Label:
        id:time
        text:"[b]00[/b]:00:00"
        
    
    BoxLayout:
        orientation: 'horizontal'
        padding:20
        spacing:20
        size_hint: (1,None)
        height:90
        size_hint:(1,1)

        MyButton:
            id:start_stop_button
            text:"Start"
            background_normal:"images/button1.png"
            on_press:app.start_stop_sw()
            
        MyButton:
            text:"Reset"
            background_normal:"images/button2.png"
            on_press:app.reset_sw()
            
    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
        